<?xml version="1.0" encoding="utf-8"?>
<manifest package="pivotal.io.ankopirun"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".views.activities.RunnerDetailsActivity">
        </activity>
        <activity android:name=".views.activities.RunnerLocationActivity">
        </activity>
        <activity android:name=".views.activities.OrderDetailsActivity">
        </activity>
        <activity android:name=".views.activities.CreateOrderActivity">
        </activity>
        <activity android:name=".views.activities.JoinRunActivity">
        </activity>
    </application>

</manifest>